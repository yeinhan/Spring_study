<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
<!-- 
	1.이순신, 서울시 강남구, 010 111 1111 =>id:lee
	2.홍길동, 경기도 수원시, 010 222 2222 => id:hong
	
 -->
	<bean id="lee" class="com.test02.Address">
		<constructor-arg name="name" value="이순신"></constructor-arg>
		<constructor-arg name="addr" value="서울시 강남구"></constructor-arg>
		<constructor-arg  name="phone"  value="010-111-1111"></constructor-arg>
		
	</bean>
	<bean id="hong" class="com.test02.Address">
		<constructor-arg>
			<value>홍길동</value>
		</constructor-arg>
		<constructor-arg>
			<value>경기도 수원시</value>
		</constructor-arg>
		<constructor-arg>
			<value>010-22-2222</value>
		</constructor-arg>
	</bean>
</beans>
